{
  "manifest_version": 3,
  "name": "Voice Recognition YouTube Controller",
  "version": "1.0",
  "description": "Control YouTube playback using voice commands.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "poppup.html",
     "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}